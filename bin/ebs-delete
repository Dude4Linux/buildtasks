#!/bin/bash -e
# depends on ec2-api-tools/ec2-ami-tools

fatal() { echo "FATAL [$(basename $0)]: $@" 1>&2; exit 1; }
info() { echo "INFO [$(basename $0)]: $@"; }

usage() {
cat<<EOF
Syntax: $0 snapshot_name
Delete ebs backed ami (i.e., deregister and delete snapshot)

Arguments::

    snapshot_name   - name of snapshot (e.g., turnkey-core-11.2-lucid-x86.ebs)

Environment::

    REGION          - Amazon region ($REGION)
    AWS_USERID      - Amazon userid without dashes ($AWS_USERID)
    EC2_CERT        - Amazon X509 certificate path ($EC2_CERT)
    EC2_PRIVATE_KEY - Amazon X509 private-key path ($EC2_PRIVATE_KEY)
EOF
exit 1
}

if [[ "$#" != "1" ]]; then
    usage
fi

[ -n "$REGION" ] || fatal "REGION not set"
[ -n "$AWS_USERID" ] || fatal "AWS_USERID not set"
[ -f "$EC2_CERT" ] || fatal "EC2_CERT not set or does not exist"
[ -f "$EC2_PRIVATE_KEY" ] || fatal "EC2_PRIVATE_KEY not set or does not exist"

snapshot_name=$1

info "determining ami id ($snapshot_name)"
ami_id=$(ec2-describe-images --region=$REGION --owner=$AWS_USERID | grep $AWS_USERID/$snapshot_name$'\t' | cut -f 2)
[ "$ami_id" ] || fatal "could not determine ami id"
[ "$(echo $ami_id | wc -w)" == "1" ] || fatal "more than one ami id match"

info "determining snapshot id ($snapshot_name)"
snapshot_id=$(ec2-describe-snapshots --region=$REGION --owner=$AWS_USERID |grep $snapshot_name |cut -f 2)
[ "$snapshot_id" ]  || fatal "could not determine snapshot id"
[ "$(echo $snapshot_id | wc -w)" == "1" ] || fatal "more than one snapshot id match"

info "deregistering ami ($ami_id)"
ec2-deregister --region=$REGION $ami_id

info "deleting snapshot"
ec2-delete-snapshot $snapshot_id

